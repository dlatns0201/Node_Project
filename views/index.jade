extends ./layout
block content
  // Page Wrapper
  #page-wrapper
      // Header
      header#header.alt
          h1
              a(href='/#') Home
          | 						
          nav
             -if(user)
               span= 'User: '+user+'  /'
               a(href='/logout') LOGOUT
             -else
               a(href='/login') LOGIN
              a(href='#menu') Menu
      // Menu
      nav#menu
          .inner
              h2 Menu
              | 							
              ul.links
                  li
                      a(href='/intro') Introduction
                  | 								
                  li
                      a(href='/') Interests
                  | 								
                  li
                      a(href='elements.html') Studies
                  | 								 								
              | 							
              a.close(href='#') Close
      // Banner
      section#banner
          .inner
